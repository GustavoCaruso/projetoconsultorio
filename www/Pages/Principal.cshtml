}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <title>Sua Página</title>
    <style>
        /* Adicione estilos personalizados aqui */
        .custom-grid {
            background-color: #28a745; /* Verde Bootstrap */
            color: #fff; /* Texto branco */
            padding: 40px;
            border-radius: 10px;
            text-align: center;
            height: 300px; /* Altura ajustada */
            margin-bottom: 20px; /* Espaçamento entre as grids quando na vertical */
        }

        .last-word-bold {
            font-weight: bold;
        }

        .custom-link {
            text-decoration: none; /* Remover sublinhado */
            color: #fff;
        }

            .custom-link:hover {
                color: #fff; /* Cor do texto no hover */
                text-decoration: none; /* Remover sublinhado no hover */
            }

      
    </style>
</head>
<body style="background-color: #f8f9fa; ">
    <!-- Header (seu cabeçalho) -->
    <!-- Conteúdo principal -->
    <div class="container mt-5">
        <div class="row">
            <!-- Grid 1: Cadastro de Médico -->
            <div class="col-md-4">
                <a href="/cadastrarMedico" class="custom-link">
                    <div class="custom-grid d-flex align-items-center justify-content-center">
                        <i class="fas fa-user-md fa-3x mb-3"></i>
                        <h2>Cadastro de <span class="last-word-bold">Médico</span></h2>
                        <!-- Adicione o conteúdo do cadastro de médico aqui -->
                    </div>
                </a>
            </div>

            <!-- Grid 2: Cadastro de Paciente -->
            <div class="col-md-4">
                <a href="/cadastrarPaciente" class="custom-link">
                    <div class="custom-grid d-flex align-items-center justify-content-center">
                        <i class="fas fa-user fa-3x mb-3"></i>
                        <h2>Cadastro de <span class="last-word-bold">Paciente</span></h2>
                        <!-- Adicione o conteúdo do cadastro de paciente aqui -->
                    </div>
                </a>
            </div>

            <!-- Grid 3: Cadastro de Consulta -->
            <div class="col-md-4">
                <a href="/cadastrarConsulta" class="custom-link">
                    <div class="custom-grid d-flex align-items-center justify-content-center">
                        <i class="far fa-calendar-alt fa-3x mb-3"></i>
                        <h2>Cadastro de <span class="last-word-bold">Consulta</span></h2>
                        <!-- Adicione o conteúdo do cadastro de consulta aqui -->
                    </div>
                </a>
            </div>
        </div>
    </div>

    <!-- Footer (seu rodapé) -->
    <!-- Bootstrap JS (opcional, dependendo dos componentes que você estiver usando) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
</body>
</html>
