@page
@model www.Pages.DisponibilidadeModel
@{
}

<h1>Disponibilidade</h1>

<div class="container-fluid">

    <input type="hidden" id="txtid" value="0" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="txtdiaDaSemana">Dia da Semana</label>
                <input type="number" class="form-control" id="txtdiaDaSemana" placeholder="Dia da Semana" required>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label for="txthoraInicio">Horário de início</label>
                <input type="time" class="form-control" id="txthoraInicio" placeholder="Horário de início"  required step="60">
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label for="txthoraFim">Horário de fim</label>
                <input type="time" class="form-control" id="txthoraFim" placeholder="Horário de fim"  required step="60">
            </div>
        </div>




        <div class="col-md-12">
            <div class="form-group">
                <button type="button" id="btnsalvar" class="btn btn-primary">Salvar</button>
                <button type="button" id="btnlimpar" class="btn btn-primary">Limpar</button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Código</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Visualizar</th>
                        <th scope="col">Excluir</th>
                    </tr>
                </thead>
                <tbody id="tabela">
                </tbody>
            </table>
        </div>
    </div>

    <table style="display:none">
        <tr id="linhaExemplo">
            <th scope="row" class="codigo"></th>
            <td class="nome"></td>
            <td><a href="#" class="alterar">Visualizar</a></td>
            <td><a href="#" class="excluir">Excluir</a></td>
        </tr>
    </table>
</div>

@section Scripts{
    <script src="~/js/disponibilidade.js"></script>
}
